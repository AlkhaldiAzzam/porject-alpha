<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Plot</th>
      <th>User</th>
      <th>Poster</th>
      <th>Trailer</th>
      <th>Rating</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.title %></td>
        <td><%= film.plot %></td>
        <td><%= film.user.email %></td>
         <td><img style="width: 420px; height: 315px" src=<%=film.poster%>></img></td>
        <div>
        <td><iframe width="420" height="315" src=<%=film.trailer%>></iframe></td>
        </div>
        <td><%= film.rating %></td>

        <td><%= link_to 'Show', film %></td>
        <% if current_user.id == film.user_id%>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

